

bash "%%NAME%%_install_bash" do
    user "root"
    code <<-EOF

# Do something here...

touch #{node[:%%NAME%%][:version_dir]}/.installed
EOF
  not_if { ::File.exists?( "#{node[:%%NAME%%][:version_dir]}/.installed" ) }
end

